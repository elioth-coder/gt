{% extends "@pages/Website/base.html.twig" %}

{% block title %}DEPARTMENTS - General Tinio, Nueva Ecija | The Official Website{% endblock title %}
{% block styles %}
  {{ parent() }}
  {% include('@components/Common/markdown.style.twig') %}
{% endblock styles %}
{% block innerContent %}
  <div class="lg:flex lg:flex-row lg:justify-between lg:space-x-8">
    <section class="w-full">
      <h1 class="border-b border-gray-300 text-3xl text-blue-600 py-4 font-semibold">
        {{ department.name }}
      </h1>
      <section class="py-4">
        <div class="bg-gray-50 p-4 flex items-center justify-between">
          <div>
            <img src="{{ 
                (department_head.image) 
                ? '/uploads/users/'~ department_head.image 
                : '/assets/img/profile.png' 
              }}" 
              class="inline-block rounded-full shadow-3xl h-[100px] justify-self-start" 
            />          
            <section class="inline-block text-gray-600 align-bottom px-2 leading-tight">
              <b class="underline">
                {{ (department_head.gender == 'MALE') ? 'MR.' : 'MS.' }}
                {{ department_head.first_name|upper }}
                {{ department_head.last_name|upper }}
              </b>
              <br>{{ department_head.designation|upper }}<br>
              {{ department.name|upper }}
            </section>
          </div>
          <img src="{{ 
              (department.logo) 
              ? '/uploads/departments/'~ department.logo 
              : '/assets/img/transparency-seal.png' 
            }}" 
            class="block rounded-full shadow-3xl h-[100px]" 
          />          
        </div>
      </section>
      <div class="w-full editor-preview mb-5">
        {{ department.details|raw }}
      </div>
    </section>
    {% include('@components/Website/right-sidebar.html.twig') %}
  </div>
  <div class="lg:flex lg:flex-col">
    {{ 
      include('@components/Website/bottom-content.html.twig', { 
        'page_settings': page_settings,
        'departments'  : departments,
      })
    }}
  </div>
{% endblock innerContent %}
{% block scripts %}
  {{ parent() }}
  <script>
    $('.editor-preview h1').addClass("text-{{ page_settings.color }}-600");
  </script>
{% endblock scripts %}