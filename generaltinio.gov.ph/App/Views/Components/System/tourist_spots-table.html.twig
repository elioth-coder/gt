<table id="tourist_spots-table" class="border mb-5 divide-y divide-gray-200 table-fixed">
  <thead class="bg-gray-100">
    <tr>
      <th class="text-left">#</th>
      <th class="text-left">Name</th>
      <th class="text-left">Details</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    {% if tourist_spots is empty %}
        <tr>
          <td colspan="4" class="px-2 py-3 max-w-max align-top text-center text-gray-500">No tourist spots found.</td>
        </tr>
    {% endif %}

    {% for tourist_spot in tourist_spots %}
        <tr>
          <td>{{ loop.index }}.</td>
          <td class="truncate">{{ tourist_spot.name }}</td>
          <td class="truncate">{{ tourist_spot.details }}</td>
          <td class="text-center">
            <button onclick="{{ 'editTouristSpot(' ~ tourist_spot|json_encode() ~ ');' }}" class="text-blue-500">
              {{ include('@components/Common/icon-outline.twig', { 'name': 'pencil', 'style': 'w-6 h-6' }) }}
            </button>
            <button onclick="{{ 'deleteTouristSpot(' ~ tourist_spot.id ~ ');' }}" class="text-red-500">
              {{ include('@components/Common/icon-outline.twig', { 'name': 'trash', 'style': 'w-6 h-6' }) }}
            </button>
          </td>
        </tr>
    {% endfor %}
  </tbody>
</table>
