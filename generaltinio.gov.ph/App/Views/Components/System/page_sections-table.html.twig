<table id="page_sections-table" class="border mb-5 divide-y divide-gray-200 table-fixed">
  <thead class="bg-gray-100">
    <tr>
      <th class="text-left">#</th>
      <th class="text-left">Title</th>
      <th class="text-left">Content</th>
      <th class="text-center">Sequence</th>
      <th class="text-center">Page</th>
      <th class="text-center">Action</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    {% if page_sections is empty %}
        <tr>
          <td colspan="6" class="px-2 py-3 max-w-max align-top text-center text-gray-500">No page sections found.</td>
        </tr>
    {% endif %}

    {% for page_section in page_sections %}
        <tr>
          <td>{{ loop.index }}.</td>
          <td class="truncate">{{ page_section.title }}</td>
          <td class="truncate">{{ page_section.content }}</td>
          <td class="text-center">{{ page_section.sequence }}</td>
          <td class="text-center">{{ page_section.page }}</td>
          <td class="text-center">
            <button onclick="{{ 'editPageSection(' ~ page_section|json_encode() ~ ');' }}" class="text-blue-500">
              {{ include('@components/Common/icon-outline.twig', { 'name': 'pencil', 'style': 'w-6 h-6' }) }}
            </button>
            <button onclick="{{ 'deletePageSection(' ~ page_section.id ~ ');' }}" class="text-red-500">
              {{ include('@components/Common/icon-outline.twig', { 'name': 'trash', 'style': 'w-6 h-6' }) }}
            </button>
          </td>
        </tr>
    {% endfor %}
  </tbody>
</table>
