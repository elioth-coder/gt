<section id="tourist-spots">
  <h3 class="border-b border-gray-300 text-3xl text-{{ page_settings.color }}-600 py-4 font-semibold">
    Tourist Spots
  </h3>    
  {% for tourist_spot in tourist_spots %}
    <div class="border-b py-4 relative box-border">
      <a href="/view/tourist_spot/{{ tourist_spot.id }}#content" class="w-40 block float-left mr-2">
        <img src="/uploads/tourist_spots/{{ tourist_spot.image }}" 
          class="w-full border shadow"
        />
      </a>
      <h4 class="hover:underline font-semibold text-lg text-{{ page_settings.color }}-900">
        <a href="/view/tourist_spot/{{ tourist_spot.id }}#content">{{ tourist_spot.name }}</a>
      </h4>
      <p>{{ tourist_spot.details[:230]}}{{ (tourist_spot.details|length > 230) ? '...' : '' }}</p>
      <p class="clear-both"></p>
    </div>
  {% endfor %}  

  <section class="clear-both"></section>
  <a href="/list/TOURIST SPOT#content" 
    class="hover:text-{{ page_settings.color }}-600 underline block p-3 bg-gray-100">
    {{ include('@components/Common/icon-outline.twig', { 
        'name'  : 'view-list', 
        'style' : 'h-5 w-5 inline-block' 
      }) 
    }}    
    <span>View All Tourist Spots</span>
  </a>  
</section>
