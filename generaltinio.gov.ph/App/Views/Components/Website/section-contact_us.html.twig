<section id="contact-us">
  <h3 class="text-3xl text-{{ page_settings.color }}-600 pt-4 font-semibold">
    Get In Touch
  </h3> 
  <p class="border-b border-gray-300 text-gray-500 pb-4">Have any questions? We'd love to hear from you.</p>
  <form id="ContactUsForm" action="/system/messages" method="POST" enctype="multipart/form-data" 
    class="md:p-5 flex flex-row flex-wrap">
    <div class="md:w-1/2 w-full md:p-5">
      <div class="w-full flex flex-col py-4">
        <img id="image" class="h-72 mx-auto" src="/assets/img/contact-us.jpg" alt="" />
      </div>
    </div>

    <div class="md:w-1/2 w-full md:p-5">
      <div id="container-name" class="py-4 relative">
        <input required
          placeholder="Your Name"
          class="w-full py-2 px-4 rounded border border-gray-300 focus:border-{{ page_settings.color }}-700 focus:outline-none" 
          type="text" id="name" name="name" 
        />  
        <p class="error-message absolute left-4 bottom-[-10px] text-red-600 hidden">This field is required.</p>
      </div>
      <div id="container-email" class="py-4 relative">
        <input required
          placeholder="Email Address"
          class="w-full py-2 px-4 rounded border border-gray-300 focus:border-{{ page_settings.color }}-700 focus:outline-none" 
          type="email" id="email" name="email" 
        />  
        <p class="error-message absolute left-4 bottom-[-10px] text-red-600 hidden">This field is required.</p>
      </div>      
      <div id="container-message" class="py-4 relative">
        <textarea required placeholder="Your Message"
          rows="6"
          class="w-full py-2 px-4 rounded border border-gray-300 focus:border-{{ page_settings.color }}-700 focus:outline-none" 
          id="message" name="message" 
        /></textarea>
        <p class="error-message absolute left-4 bottom-[-10px] text-red-600 hidden">This field is required.</p>
      </div>
    </div>

    <div class="px-5 w-full text-right">
      <button id="save-button" type="submit" onclick="setTimeout(() => this.blur(), 300);" 
        class="shadow w-max relative overflow-hidden border p-4 bg-transparent hover:bg-{{ page_settings.color }}-700 border-2 border-{{ page_settings.color }}-700 text-{{ page_settings.color }}-700 hover:text-white font-bold rounded-lg px-5 py-2.5 group">
        <span class="absolute left-0 top-0 bg-transparent h-full w-full group-focus:bg-{{ page_settings.color }}-900 transition-all ease-out duration-300"></span>
        <span class="relative">Send Message</span>
      </button>
    </div>
  </form>
</section>
